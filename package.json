{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "db:seed": "node db/seed-lockers.js",
    "db:codegen": "kysely-codegen --out-file db/db.d.ts",
    "dev": "vite dev",
    "node:dev": "tsx watch --tsconfig node-src/tsconfig.json -r dotenv/config node-src/index.ts",
    "node:build": "esbuild --bundle --platform=node --format=esm --packages=external --outdir=build --sourcemap '--alias:$env/dynamic/private=./node-src/polyfills/env.ts' '--alias:$app/paths=./node-src/polyfills/app-paths.ts' node-src/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.5.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.1.4",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.26.0",
    "kysely-codegen": "^0.10.0",
    "mysql2": "^2.3.3",
    "postcss": "^8.4.23",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "sveltekit-superforms": "^0.8.4",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "@planetscale/database": "^1.6.0",
    "@sveltejs/adapter-node": "^1.2.4",
    "emailjs": "^4.0.2",
    "express": "^4.18.2",
    "jose": "^4.14.4",
    "kysely": "^0.24.2",
    "kysely-planetscale": "^1.3.0",
    "node-cron": "^3.0.2",
    "xlsx": "file:vendor/xlsx-0.19.3.tgz",
    "zod": "^3.21.4"
  }
}
